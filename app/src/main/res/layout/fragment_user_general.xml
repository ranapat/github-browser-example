<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/details_image_width"
        android:layout_height="@dimen/details_image_width"
        android:adjustViewBounds="true"
        android:contentDescription="@string/user_member_list_icon"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_generic_error" />

    <TextView
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        tool:text="## content ##"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        tool:text="## content ##"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintStart_toStartOf="@id/login" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        tool:text="## content ##"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/login" />

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/createdAt"
        app:layout_constraintStart_toStartOf="@id/login" />

    <TextView
        android:id="@+id/company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toStartOf="@id/login" />

    <TextView
        android:id="@+id/publicRepos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/company"
        app:layout_constraintStart_toStartOf="@id/login" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/publicRepos"
        app:layout_constraintStart_toStartOf="@id/login" />

    <TextView
        android:id="@+id/publicGists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/followers"
        app:layout_constraintStart_toStartOf="@id/login" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/smaller_font_size"
        android:background="@color/smooth_background_color"
        android:singleLine="false"
        android:padding="@dimen/double_padding"
        android:layout_margin="@dimen/double_margin"
        app:layout_constraintTop_toBottomOf="@id/publicGists"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>