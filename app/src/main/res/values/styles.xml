<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.TextView" parent="">
        <item name="android:textColor">@color/primary_font_color</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="Widget.App.TextView.Default">
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="Widget.App.TextView.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.App.TextView.Small">
        <item name="android:textSize">@dimen/smaller_font_size</item>
    </style>

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="titleTextColor">@color/primary_font_color</item>
    </style>

</resources>
